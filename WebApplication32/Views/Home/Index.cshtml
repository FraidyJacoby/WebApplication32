@using WebApplication32.Data
@model WebApplication32.Models.PeopleViewModel

<div class="container" style="margin-top:45px;">
    <a href="/home/addpeople" class="btn btn-primary">Add People</a>
    <table class="table table-bordered table-striped">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
        </tr>
        @foreach(Person p in Model.People)
        {
            <tr>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>
                <td>@p.Age</td>
            </tr>
        }
    </table>
</div>